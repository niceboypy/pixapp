<MySpinnerOption@SpinnerOption>:
    # background_color: color_button if self.state == 'down' else color_button_pressed
    background_normal: 'button_list.png'
    background_down: 'button_dep.png'
    color: color_font

<MyDropDownClass@DropDown>:
    bar_color: [.7, .10, .1, .95]
    bar_inactive_color: [.5, .5, .5, .8]
    bar_width: '7dp'


<Img_search_preview>:
    orientation: 'vertical'
    size_hint_y: 0.07
    BoxLayout:
        orientation:'horizontal'
        size_hint_y: 0.2
        Label:
            text: 'Fetch: '
            size_hint_x: 0.3
        TextInput:
            multiline:False
            hint_text: "Image to fetch e.g. car"
        
