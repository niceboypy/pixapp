<Img_query_holder>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: label
            text: "Minimum height: "
            size_hint_x: .2
            font_size: "15dp"
        Flexible_Input:
            id: dim_input
            multiline: False
            password: False
            hint_text: 'leave for default'
            size_hint_y: 1
            size_hint_x: .5
            padding_x: "10dp"

            
<Preview_panel>:
    orientation: 'vertical'
    size_hint_y: 0.6
    Label:
        size_hint_y:0.05
    BoxLayout:
        orientation:'vertical'
        id: main_preview
        mytext:'somethingIhaveInHere'
        BoxLayout:
            
            orientation: 'horizontal' 
            size_hint_y: 0.1
            padding_top: "10dp"
            Label:
                size_hint_x: .5
            CheckBox:
                id: preview_checkbox
                active:False
                size_hint_x: 0.01
            Label:
                id: preview_label
                size_hint_x: 1
                text: "[ref=preview]Preview: [/ref]"
                markup: True
                font_size: "20dp"
                halign: 'left'
                size_hint_x: 0.4
            
            Label:
                size_hint_x: .5
    
        Image:
            id: image_panel
            source: 'test_image.jpg'
        Label:
            size_hint_y: 0.02
        BoxLayout:
            size_hint_y: .1
            padding_left: "25dp"
            orientation:'horizontal'
            Label:
                size_hint_x: .4
            Button:
                id: previous_button
                size_hint_x: .2
                text:'<'
            Button:
                id: next_button
                size_hint_x: .2
                text: '>'
            Label:
                size_hint_x: .4
            
    
   


<dropdown_holder>:
    orientation:'vertical'
    spinner: spin
    BoxLayout:
        orientation:'horizontal'
        size_hint_y: 1
        Label:
            id: info_label
            text: 'something: '
            valign: 'middle'
            size_hint_x: 0.5
            font_size: "17dp"
        Spinner:
            id: spin
            text_autoupdate: True
            values: ["First thing", "Second thing", "Third thing","fourth_thing", 'fifth thing','sixth', 'seventh']
            background_normal: 'dropdown.png'
            background_down: 'dropdown_dep.png'
            color: (1,1,1,1)
            dropdown_cls: Factory.get("MyDropDownClass")
            option_cls: Factory.get("MySpinnerOption")
            size_hint_x: 0.7
    BoxLayout:
        orientation:'vertical'
        size_hint_y: 0.4
        Label:
            text:''